<%-layout('layout/boilerPlate') %> 
<div class="row">
    <div class="col-6 offset-3">
        <form action="/posts" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label for="title" class="form-label">Location</label>
                <input type="text" id="title" name="post[location]" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="url" class="form-label">Image URL</label>
                <input type="text" id="url" name="post[url]" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <textarea type="text" name="post[description]" id="Description" class="form-control" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success">Create</button>
        </form>
    </div>
</div>

