<%-include('../partials/navbar')%>
<%-layout('layout/boilerPlate') %> 
<div class="row">
    <div class="col-6 offset-3">
        <form action="/posts/<%= post._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Location</label>
                <input type="text" id="title" name="post[location]" class="form-control" value="<%=post.location%>">
            </div>
            <div class="mb-3">
                <label for="url" class="form-label">Image URL</label>
                <input type="text" id="url" name="post[url]" class="form-control" value="<%=post.url%>">
            </div>
            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <textarea type="text" name="post[description]" id="Description" class="form-control" ><%=post.description%></textarea>
            </div>
            <button class="btn btn-success">Update</button>
        </form>
    </div>
</div>
