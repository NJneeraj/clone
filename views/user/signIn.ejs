<%-layout('layout/boilerPlate') %>
<div class="container">
    <div class="row">
      <div class="card m-auto mt-5" style="width: 23rem">
        <div class="text-center">
          <i
            data-visualcompletion="css-img"
            aria-label="Instagram"
            class="text-center mt-5"
            role="img"
            style="
              background-image: url('https://static.cdninstagram.com/rsrc.php/v3/yi/r/ZFtnMBJnHU_.png');
              background-position: 0px -554px;
              background-size: auto;
              width: 175px;
              height: 51px;
              background-repeat: no-repeat;
              display: inline-block;
            "
          ></i>
          <%-include('../partials/flash') %> 
        </div>
        <div class="card-body">
          <form action="/user/signin" method="POST" novalidate class="validated-form">
            <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  id="floatingInput"
                  placeholder="name"
                  name="username" required
                />
                <label for="floatingInput">Username</label>
              </div>
            <div class="form-floating">
              <input
                type="password"
                class="form-control"
                id="floatingPassword"
                placeholder="Password"
                name="password" required
              />
              <label for="floatingPassword">Password</label>
            </div>
            <button class="btn btn-primary mx-auto d-block my-4 w-100">
              Sign In
            </button>
            <div class="border border-start-0 border-end-0 text-center mb-3">
                <span>Or</span>
              </div>
              <div class="d-flex">
                <a href="" class="mx-auto" style="text-decoration: none"
                  >Forgotten your password?</a
                >
              </div>
          </form>
        </div>
      </div>
    </div>
    <div class="card my-2 d-block mx-auto" style="width: 23rem">
      <p class="d-block py-2 text-center">
        Don't have an accout?
        <a href="/user/signup">Sign Up</a>
      </p>
    </div>
  </div>


