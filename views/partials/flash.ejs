<% if(success && success.length) {%>
    <div class="alert alert-light alert-dismissible fade show text-success my-0 py-1" role="alert">
        <%= success %>
        <button type="button" class="btn-close my-0 py-1" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <% if(error && error.length) {%>
            <div class="alert alert-light alert-dismissible fade show text-danger my-0 py-1" role="alert">
                <%= error %>
                <button type="button" class="btn-close my-0 py-1" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>